<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_theme_filter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/mid_black_opacity</item>
    </style>

    <style name="background_image_main_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="android:background">@drawable/curves</item>
        <item name="android:paddingStart">@dimen/space_32</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="transparent_btn_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="button_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginTop">@dimen/space_16</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_view_periodic_style">
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="android:layout_marginTop">@dimen/space_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>